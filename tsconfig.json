{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // ⚠️ ESSENCIAIS
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],

    // Outras configs suas
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },

  // ⚠️ Fundamental para o TS enxergar seu código
  "include": ["src"]
}
